<Window x:Class="Maintenance_Process_Control_System.TechnicianView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Maintenance_Process_Control_System"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:local1="clr-namespace:Maintenance_Process_Control_System.View" 
        xmlns:local2="clr-namespace:Maintenance_Process_Control_System.ChildView" 
        xmlns:viewModel="clr-namespace:Maintenance_Process_Control_System.ViewModel"
        xmlns:viewModel2="clr-namespace:Maintenance_Process_Control_System.ChildViewModel"
        mc:Ignorable="d"
        Height="700" Width="1300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.DataContext>
        <viewModel:TechnicianViewModel/>
    </Window.DataContext>
    <Window.Resources>

        <DataTemplate DataType="{x:Type viewModel2:techCarViewModel}">
            <local2:techCarView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel2:techEnterViewModel }">
            <local2:techEnterView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel2:techFaultViewModel}">
            <local2:techFaultView/>
        </DataTemplate>

    </Window.Resources>

    <Border CornerRadius="12" BorderThickness="1" >
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.75"/>
                <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Border.Background>
            <LinearGradientBrush StartPoint="0 0" EndPoint="1 1">
                <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="0"/>
                <GradientStop Color="{StaticResource secondaryBackColor3}" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="190"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--菜单栏-->
            <Border CornerRadius="10 0 0 10" Grid.Column="0" Background="#ffffff">

                <DockPanel LastChildFill="True">
                    <StackPanel VerticalAlignment="Bottom" DockPanel.Dock="Bottom" Margin="0 0 0 30">

                        <Border Background="Transparent" 
                            BorderBrush="DarkGray" BorderThickness="0 0 0 1"
                            Margin="20 10 20 20"/>
                        <!--菜单栏底部-->
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <!--当前用户-->
                            <StackPanel Orientation="Horizontal" Grid.Column="0" HorizontalAlignment="Center">
                                <Ellipse Height="30" Width="30"
                                     Stroke="{StaticResource color2}"
                                     StrokeThickness="2"
                                     Margin="15,0,8,0">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="/Images/touxiang.jpg"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                                <TextBlock Text="{Binding CurrentUserAccount,Mode=OneWay}"
                                       Foreground="{StaticResource titleColor3}"
                                       FontFamily="Montserrat"
                                       FontSize="16"
                                       VerticalAlignment="Center"/>
                            </StackPanel>

                            <!--退出按键-->
                            <Button Style="{StaticResource iconButton}"
                                Tag="{StaticResource titleColor5}" HorizontalAlignment="Right"
                                Grid.Column="1" Margin="0 5 20 0" Command="{Binding ExitCommand}">
                                <fa:IconImage Icon="SignOut" Style="{StaticResource iconButtonIcon}"/>
                            </Button>
                        </Grid>
                    </StackPanel>


                    <!--菜单栏上部-->
                    <StackPanel>
                        <!--logo-->
                        <StackPanel Orientation="Horizontal" Height="35" HorizontalAlignment="Center"
                                Margin="15 25 0 0">
                            <TextBlock Text="T" 
                                   TextAlignment="Center" 
                                   Foreground="{StaticResource color5}"
                                   FontSize="25"
                                   FontWeight="Black"
                                   VerticalAlignment="Center"
                                   Margin="0 0 0 6"/>
                            <TextBlock Text="rackMaster" 
                                   TextWrapping="Wrap" TextAlignment="Center" 
                                   Foreground="{StaticResource titleColor5}"
                                   FontSize="13"
                                   FontWeight="Black"
                                   VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="技术组" 
                                   TextWrapping="Wrap" TextAlignment="Center" 
                                   Foreground="{StaticResource titleColor3}"
                                   FontSize="12"
                                   FontWeight="Black"
                                   VerticalAlignment="Center"/>

                        <Border Background="Transparent" 
                            BorderBrush="LightGray" BorderThickness="0 0 0 1"
                            Margin="20 10 20 20"/>


                        <!--菜单按键-->
                        <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource color1}"
                                 IsChecked="True" Command="{Binding ShowHomeViewCommand}" >
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Subway" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="机车信息" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource color2}"
                                     Command="{Binding ShowCustomerViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Indent" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="机车入库" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource color3}"
                                     Command="{Binding ShowUserViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="WindowRestore" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="故障分解" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>

                        
                        
                    </StackPanel>

                </DockPanel>


            </Border>

            <!--主体-->
            <Border CornerRadius="0 10 10 0" Grid.Column="1">

                <Grid>
                    <Grid.RowDefinitions>
                        <!--控制栏-->
                        <RowDefinition Height="15"/>
                        <!--子视图栏-->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--控制栏-->
                    <StackPanel x:Name="pnlControlbar" Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Grid.Row="0"
                                Background="Transparent"
                                Margin="0 0 5 0"
                                MouseLeftButtonDown="pnlControlbar_MouseLeftButtonDown"
                                MouseEnter="pnlControlbar_MouseEnter">

                        <Button x:Name="btnClose" Style="{StaticResource controlButton}"
                                Tag="{StaticResource color4}"
                                Click="btnClose_Click">
                            <fa:IconImage Icon="Xmark" Style="{StaticResource controlButtonIcon}"/>
                        </Button>
                        <Button x:Name="btnMaximize" Style="{StaticResource controlButton}"
                                Tag="{StaticResource color6}"
                                Click="btnMaximize_Click">
                            <fa:IconImage Icon="Square" Style="{StaticResource controlButtonIcon}"/>
                        </Button>
                        <Button x:Name="btnMinimize" Style="{StaticResource controlButton}"
                                Tag="{StaticResource color8}"
                                Click="btnMinimize_Click">
                            <fa:IconImage Icon="WindowMinimize" Width="12" Style="{StaticResource controlButtonIcon}"/>
                        </Button>
                    </StackPanel>

                    <!--子视图-->
                    <ContentControl Content="{Binding CurrentChildView}"
                                    Grid.Row="2"
                                    Margin="25"/>


                </Grid>
            </Border>
        </Grid>

    </Border>
</Window>