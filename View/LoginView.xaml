<Window x:Class="Maintenance_Process_Control_System.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Maintenance_Process_Control_System.View"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:viewModel="clr-namespace:Maintenance_Process_Control_System.ViewModel"
        mc:Ignorable="d"
        Height="550" Width="800"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown">
    <Window.DataContext>
        <viewModel:LoginViewModel/>
    </Window.DataContext>

    <Border CornerRadius="12">
        <!--背景图像-->
        <Border.Background>
            <ImageBrush ImageSource="/Images/train.jpg" Stretch="None"/>
        </Border.Background>


        <!--登录面板-->
        <Border CornerRadius="12" BorderThickness="1" Opacity="0.85">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                    <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.75"/>
                    <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                    <GradientStop Color="{StaticResource primaryBackColor3}" Offset="0"/>
                    <GradientStop Color="{StaticResource primaryBackColor4}" Offset="1.2"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!--导航栏区域-->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel x:Name="pnlControlbar" Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Grid.Column="1"
                                Background="Transparent">

                        <Button x:Name="btnClose" Style="{StaticResource controlButton}"
                                Tag="{StaticResource color4}"
                                Click="btnClose_Click">
                            <fa:IconImage Icon="Xmark" Tag="{StaticResource color4}" Style="{StaticResource controlButtonIcon}" />
                        </Button>
                        <Button x:Name="btnMinimize" Style="{StaticResource controlButton}"
                                Tag="{StaticResource color3}"
                                Click="btnMinimize_Click">
                            <fa:IconImage Icon="WindowMinimize" Tag="{StaticResource color8}" Width="12"  Style="{StaticResource controlButtonIcon}" />
                        </Button>
                    </StackPanel>


                </Grid>

                <!--面板区域-->
                <StackPanel Grid.Row="1" Width="350"
                            Orientation="Vertical"
                            Margin="0 35 0 0">

                    <!--LOGO-->
                    <Image Width="100" Height="100"/>
                    <!--用户名-->
                    <TextBlock Text="Track Master"
                               Foreground="White"
                               FontSize="25"
                               FontWeight="Black"
                               HorizontalAlignment="Center"/>

                    

                    <TextBlock Text="用户名"
                               Foreground="LightGray"
                               FontSize="15"
                               FontWeight="Black"
                               Margin="50 60 0 0"/>
                    <Border BorderBrush="LightGray" 
                            BorderThickness="0 0 0 1"
                            Height="28" 
                            Width="250"
                            VerticalAlignment="Center"
                            Margin="0 10 0 0">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <!-- 图标区 -->
                                <ColumnDefinition Width="Auto"/>
                                <!-- 输入区 -->
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 左侧人员图标 -->
                            <fa:IconImage Icon="UserAlt" 
                                        Grid.Column="0"
                                        Foreground="White"
                                        VerticalAlignment="Center"
                                        Width="18"
                                        Margin="12 0 8 0"
                                        Opacity="0.8"/>

                            <!-- 右侧输入框 -->
                            <TextBox x:Name="txtUser"
                                    Grid.Column="1"
                                    FontSize="14"
                                    FontWeight="Medium"
                                    FontFamily="Montserrat"
                                    Foreground="White"
                                    CaretBrush="DarkGray"
                                    BorderThickness="0"
                                    Background="Transparent"
                                    VerticalAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                    Padding="0 0 10 0"
                                    Text="{Binding Account, UpdateSourceTrigger=PropertyChanged}">

                                <!-- 悬浮/聚焦效果 -->
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="#A0FFFFFF"/>
                                            </Trigger>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter Property="BorderBrush" Value="{StaticResource color1}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Grid>
                    </Border>

                    <!--密码-->
                    <TextBlock Text="密  码"
                               Foreground="LightGray"
                               FontSize="15"
                               FontWeight="Black"
                               Margin="50 15 0 0"/>
                    <!-- 改进后的密码输入框 -->
                    <Border BorderBrush="LightGray" 
        BorderThickness="0 0 0 1"
        Height="28" 
        Width="250"
        VerticalAlignment="Center"
        Margin="0 10 0 0">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <!-- 图标区 -->
                                <ColumnDefinition Width="Auto"/>
                                <!-- 输入区 -->
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 左侧锁形图标 -->
                            <fa:IconImage Icon="Lock" 
                    Grid.Column="0"
                    Foreground="White"
                    VerticalAlignment="Center"
                    Width="18"
                    Margin="12 0 8 0"
                    Opacity="0.8"/>

                            <!-- 右侧密码输入框 -->
                            <PasswordBox x:Name="txtPass"
                    Grid.Column="1"
                    FontSize="13.5"
                    FontWeight="Medium"
                    FontFamily="Montserrat"
                    Foreground="White"
                    CaretBrush="DarkGray"
                    BorderThickness="0"
                    Background="Transparent"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Center"
                    Padding="0 0 10 0"
                                         local:PasswordBoxHelper.BindPassword="True"
             local:PasswordBoxHelper.BoundPassword="{Binding Pwd, Mode=TwoWay}">

                                <!-- 悬浮/聚焦效果 -->
                                <PasswordBox.Style>
                                    <Style TargetType="PasswordBox">
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="#A0FFFFFF"/>
                                            </Trigger>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter Property="BorderBrush" Value="{StaticResource color1}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </PasswordBox.Style>
                            </PasswordBox>
                        </Grid>
                    </Border>

                    <!-- 添加错误提示 -->
                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="Red"
                               Margin="50 10 0 0"
                               FontSize="12"/>

                    <!--登录-->
                    <Button x:Name="btnLogin"
                            BorderThickness="0"
                            Foreground="White" Content="登  录"
                            FontSize="16"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Margin="0 30 0 0"
                            Command="{Binding LoginCommand}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#4569C9"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#5873C3"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="150" Height="40"
                                        CornerRadius="20"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>

                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>


                </StackPanel>
            </Grid>


        </Border>

    </Border>
</Window>
